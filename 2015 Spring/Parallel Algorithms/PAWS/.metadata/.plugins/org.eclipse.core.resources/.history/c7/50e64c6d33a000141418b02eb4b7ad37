import java.util.concurrent.Semaphore;
import java.util.concurrent.atomic.AtomicBoolean;


public class PrimeTester implements Runnable {
	int ID;
	Semaphore sem;
	int num;
	int numThreads;
	AtomicBoolean isPrimeAB;
	public PrimeTester(int ID, int num, Main main){
		this.ID = ID;
		this.sem = main.sem;
		this.num = main.numThreads;
		this.numThreads = numThreads;
		isPrimeAB = b;
	}
	
	public void run() {
		try {
			sem.acquire();
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
		
		boolean isPrime = (num%2==1);
		int range = (int) Math.sqrt(num);
		for(int i = Math.max(ID * num / numThreads, 3);
				!isPrime || i < (1+ID) * num / numThreads;
				i+=2) {
			if(num % i == 0){
				isPrime = false;
				break;
			}
		}
		sem.release();
		if(!isPrime){
			isPrimeAB.set(false);
		}
	}
}
